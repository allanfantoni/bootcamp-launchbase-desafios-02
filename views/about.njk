{% extends "layout.njk" %}

{% block head %}
  <title>About</title>
{% endblock %}

{% block content %}
  <div id="wrapper">
    <img src="{{ about.avatar_url }}" alt="rocketseat">
    <h1>{{ about.name }}</h1>
    <h2>{{ about.description }}</h2>
    <p>{{ about.technologies_title }}</p>
    <ul>
      {% for technology in about.technologies %}
        <li>{{ technology }}</li>
      {% endfor %}
    </ul>
  </div>

  <div id="links-footer" class="links">
    {% for link in about.links %}
      <a href="{{ link.url }}" target="_blank">{{ link.name }}</a>
    {% endfor %}
  </div>
{% endblock %}